<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:id="@+id/sfadfs"
            android:orientation="horizontal" >
			<TextView
                android:id="@+id/restvdas"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/zwtj"
                android:background="#FFFF00"
                android:textColor="@color/red" />			

            <TextView
                android:id="@+id/restv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button" android:layout_weight="1"
                android:gravity="center"
                android:text="@string/grjlgl"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/jobstv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="1"
                android:background="@drawable/button"
                android:gravity="center"
                android:text="@string/gwss"
                android:textColor="@color/black" />
        </LinearLayout>
 

        <ProgressBar
            android:layout_below = "@id/sfadfs"
            android:id="@+id/pBar2"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:layout_marginTop="30dp"
            android:gravity="center" />

        <com.example.cdpsn.DragListView
            android:id="@+id/l2"
            android:layout_below = "@id/sfadfs"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="#00000000"
            android:divider="#000000"
            android:dividerHeight="1dp" />

</RelativeLayout>